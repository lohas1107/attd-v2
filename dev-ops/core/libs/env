. ${dev_ops_path}/core/main.env

bin_file=$(basename "$0")

cd "${dev_ops_path}/envs/${bin_file#env-}"

if command -v sudo > /dev/null 2>&1; then
	sudo_command="sudo --preserve-env"
else
	sudo_command=''
fi

if [ "${1}" = ggg ]; then
	shift
	times=1
	while ! $sudo_command docker-compose "$@"
	do
		echo "Retry $((times++)) times..."
	done
else
	$sudo_command docker-compose "$@"
fi

