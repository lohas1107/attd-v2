[ -f ${dev_ops_path}/configs/local.env ] && . ${dev_ops_path}/configs/local.env
[ -f ${dev_ops_path}/configs/project.env ] && . ${dev_ops_path}/configs/project.env

export dev_ops_docker_root=${DEV_OPS_DOCKER_ROOT:-../../../}
export root_volume=${EXTERNAL_ROOT_VOLUME:-${dev_ops_docker_root}}

export gradle_repo_volume=${EXTERNAL_GRADLE_REPO_VOLUME:-gradle-repo}
export gradle_home_volume=${EXTERNAL_GRADLE_HOME_VOLUME:-gradle-home}

if [ -z "${EXTERNAL_GRADLE_REPO_VOLUME+x}" ]; then
	export gradle_repo_volume_external=false
else
	export gradle_repo_volume_external=true
fi

if [ -z "${EXTERNAL_GRADLE_HOME_VOLUME+x}" ]; then
	export gradle_home_volume_external=false
else
	export gradle_home_volume_external=true
fi

export root_point=/opt/current
export root_path="$root_point/${EXTERNAL_ROOT_VOLUME_PROJECT_PATH}"

